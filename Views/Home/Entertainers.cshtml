@{
}
@model List<Entertainers>
<center>
    <div class="container">
        @foreach (var entertainer in Model)
        {
            <div class="card card-outline-primary bg-info bg-opacity-25 m-2 p-3 col-7">
                <div class="bg-faded p-1">
                    <h3 class="float-left">@entertainer.EntStageName</h3>
                    <a asp-controller="Home" asp-action="About" asp-route-entertainerid="@entertainer.EntertainerId" class="float-right btn btn-secondary">details</a>
                </div>
            </div>
        }
        <br />
        <a class="btn btn-primary" asp-controller="Home" asp-action="Add">Add Entertainer</a>
    </div>
</center>